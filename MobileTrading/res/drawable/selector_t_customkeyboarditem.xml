<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="5dp" />

            <solid android:color="@color/pressCustomKeyboardColor" />

            <stroke android:width="3dp" android:color="@color/transparent" />
        </shape></item>
    <item><layer-list>
            <item><shape>
                    <corners android:radius="5dp" />

                    <solid android:color="#474751" />

                    <stroke android:width="5dp" android:color="@color/transparent" />
                </shape></item>
            <item android:bottom="1.5dp"><shape>
                    <corners android:radius="5dp" />

                    <solid android:color="@color/bg_keycolor2" />

                    <stroke android:width="5dp" android:color="@color/transparent" />
                </shape></item>
        </layer-list></item>

</selector>