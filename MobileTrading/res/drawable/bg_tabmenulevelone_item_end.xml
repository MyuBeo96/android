    <item android:state_selected="false"><shape>
            <stroke android:width="1dp" android:color="@color/white_text" />

            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />

            <solid android:color="@color/transparent" />
        </shape></item>
