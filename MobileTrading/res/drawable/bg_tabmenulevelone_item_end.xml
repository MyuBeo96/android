            <solid android:color="#ddffffff" />

            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape></item>
    <item><shape><stroke android:width="1dp" android:color="@color/white_text" />
<corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />

            <solid android:color="@color/transparent" />
        </shape></item>

</selector>