<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="false"><shape>
            <solid android:color="@color/transparent" />

            <stroke android:width="1dp" android:color="#4F4F5B" />

            <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" />
        </shape></item>
    <item android:state_activated="true"><shape>
            <solid android:color="#4F4F5B" />

            <stroke android:width="1dp" android:color="#4F4F5B" />

            <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" />
        </shape></item>

</selector>