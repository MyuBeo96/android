<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"><shape>
        <corners android:radius="5dp" />

        <gradient android:angle="-90" android:endColor="#B2171B" android:startColor="#CA3038" />

        <stroke android:width="0.5dp" android:color="#464646" />
    </shape></item>
    <item android:state_enabled="false"><shape>
        <corners android:radius="5dp" />

        <gradient android:angle="-90" android:endColor="#60B2171B" android:startColor="#60CA3038" />

        <stroke android:width="0.5dp" android:color="#464646" />
    </shape></item>
    <item android:state_pressed="true"><shape>
        <corners android:radius="5dp" />

        <solid android:color="@color/press_blue" />
    </shape></item>

</selector>