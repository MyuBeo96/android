<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    <View

        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/transparent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelcontenthori_label"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="5"
            android:padding="0dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/labelcontenthori_content"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:paddingLeft="10dp"
            android:singleLine="false"
            android:maxLines="2"/>

        <EditText
            android:id="@+id/labelcontenthori_content2"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical|right"

            android:singleLine="true"
            android:textColorHint="@color/text_hint_color"
            android:textCursorDrawable="@drawable/shape_textcursoredittext"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/view_genotp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m_labelcontenthorilayout_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_genotp"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/genOTP"
                android:textColor="@color/white_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/btn_genotp"
                android:layout_alignRight="@+id/btn_genotp"
                android:layout_below="@+id/btn_genotp"
                android:background="@color/white_text" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontenthorilayout_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/img_custompass_remember"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/checkbox_layout" />
        <TextView
            android:id="@+id/text_custompass_remember"
            style="@style/Label_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_custompass_remember"
            android:text=""
            android:textColor="@color/white_text"
            />
    </RelativeLayout>

    <View
        android:id="@+id/labelcontenthori_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lc_separation_color" />

</LinearLayout>