<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fscuat.mobiletrading"
    android:id="@+id/internalcashtransfer_register"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight" >

    <com.fscuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_DKCT_noibo_SoLuuKy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontentverlayout_height"
        app:contentColor="@color/white_text"
        app:contentHint="@string/SoLuuKyNhan"
        app:editable="true"
        app:inputType="textCap"
        app:labelText="@string/SoLuuKyNhan"
        app:orientation="vertical" />

    <com.fscuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/text_DKCT_noibo_NguoiNhan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontentverlayout_height"
        app:contentColor="@color/white_text"
        app:contentHint="@string/TenNguoiThuHuong"
        app:editable="true"
        app:labelText="@string/TenNguoiThuHuong"
        app:orientation="vertical" />

    <com.fscuat.mobiletrading.design.MySpinner
        android:id="@+id/spn_DKCT_noibo_SoTieuKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hasLabel="true"
        app:textMySpinner="@string/SoTieuKhoanNhan" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_DKCT_noibo_ChapNhan"
            style="@style/Button_Background1"
            android:layout_width="match_parent"
            android:text="@string/XacNhan" />
    </LinearLayout>

</LinearLayout>