<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fscuat.mobiletrading"
    android:layout_width="@dimen/alertdialog_width"
    android:id="@+id/linearLayout_input"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_gravity="center"
    android:background="@drawable/background_alertdialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_dialog_title"
        style="@style/Label_Style"
        android:text="@string/XacNhanHuyLenh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alertdialog_title_height"
        android:gravity="center"
        android:textColor="@color/white_text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/header_separation_color" />
    <!--<EditText-->
        <!--android:id="@+id/edt_dialog_tradingcode"-->
        <!--style="@style/EditText_Style_Input_Dialog"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_margin="10dp"-->
        <!--android:ems="10"-->
        <!--android:hint="@string/MatKhauGiaoDich"-->
        <!--android:inputType="textPassword|textNoSuggestions"-->
        <!--android:singleLine="true"-->
        <!--android:textColor="@color/black_text"-->
        <!--android:textColorHint="@color/text_hint_color_bgwhite"-->
        <!--android:textCursorDrawable="@drawable/shape_textcursoredittext" />-->
    <com.fscuat.mobiletrading.design.CustomPassLayout
        android:id="@+id/edt_dialog_tradingcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentColor="@color/white_text"
        app:contentHint="@string/MatKhauGiaoDich"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/MatKhauGiaoDich"
        android:visibility="gone"
        app:labelRememberText="@string/remmber_tradingpass"
        app:orientation="horizontal" />
    <com.fscuat.mobiletrading.design.CustomPassLayout
        android:id="@+id/edt_dialog_otpcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentColor="@color/white_text"
        app:contentHint="@string/otpcode"
        app:editable="true"
        android:visibility="gone"
        app:labelRememberText="@string/otpremember"
        app:showLabel="false"
        app:orientation="horizontal" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/header_separation_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_alertdialog_negative"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@color/red_brown_text"
            android:visibility="gone" />

        <View
            android:id="@+id/line_alertdialog_1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/header_separation_color"
            android:visibility="gone" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10.0">
    <TextView
        android:id="@+id/text_dialog_negative"
        style="@style/Label_Style"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="5"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/red_brown_text"
        android:background="@drawable/background_alertdialog"/>
    <View
        android:id="@+id/line_dialog_2"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/header_separation_color" />
    <TextView
        android:id="@+id/text_dialog_possitive"
        style="@style/Label_Style"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="5"
        android:gravity="center"
        android:text="@string/XacNhan"
        android:textColor="@color/green_text"
        android:background="@drawable/background_alertdialog"/>

</LinearLayout>

    </LinearLayout>

</LinearLayout>