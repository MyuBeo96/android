<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.fss.mobiletrading.common.CustomHorizontalScrollView
        android:id="@+id/horiscrollview_solenhgtc_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_solenhgtc_item_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_solenhgtc_item_contentwidth"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/m_paddingLeft"
                    android:paddingRight="@dimen/m_paddingRight"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Tu"
                        android:textColor="#ff0000"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/text_solenhgtc_item_fromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white_text"
                        android:textSize="13.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/Den"
                        android:textColor="#ff0000"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/text_solenhgtc_item_toDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white_text"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/m_paddingLeft"
                    android:paddingRight="@dimen/m_paddingRight" >

                    <TextView
                        android:id="@+id/lbl_solenhgtc_item_CustodyCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="@string/TK"
                        android:textColor="@color/white_text"
                        android:textSize="13.0sp" />

                    <TextView
                        android:id="@+id/text_solenhgtc_item_CustodyCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/lbl_solenhgtc_item_CustodyCd"
                        android:paddingLeft="3dp"
                        android:textColor="@color/white_text"
                        android:textSize="13.0sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/m_paddingLeft"
                    android:paddingRight="@dimen/m_paddingRight" >

                    <TextView
                        android:id="@+id/text_solenhgtc_item_Side"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="15.0sp" />

                    <TextView
                        android:id="@+id/text_solenhgtc_item_MaCK"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2.0"
                        android:gravity="center"
                        android:textColor="@color/white_text"
                        android:textSize="15.0sp" />

                    <TextView
                        android:id="@+id/text_solenhgtc_item_SoLuong"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2.0"
                        android:gravity="center"
                        android:textColor="@color/red_brown_text"
                        android:textSize="15.0sp" />

                    <TextView
                        android:id="@+id/text_solenhgtc_item_Gia"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.7"
                        android:gravity="center"
                        android:textColor="@color/red_brown_text"
                        android:textSize="15.0sp" />

                    <TextView
                        android:id="@+id/text_solenhgtc_item_TrangThai"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2.8"
                        android:gravity="center"
                        android:textColor="@color/white_text"
                        android:textSize="15.0sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_solenhgtc_item_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FF9966"
                android:padding="0dp"
                android:text="@string/Cancel"
                android:textColor="@color/white_text"
                 />
        </LinearLayout>
    </com.fss.mobiletrading.common.CustomHorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_separation_color"
        android:layout_marginLeft="@dimen/m_paddingLeft"
        android:layout_marginRight="@dimen/m_paddingRight" />

</LinearLayout>