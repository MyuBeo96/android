<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fscuat.mobiletrading"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thietlaptk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/m_paddingLeft"
            android:paddingRight="@dimen/m_paddingRight" >
            <LinearLayout
                android:id="@+id/lay_thietlaptk_accountinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="visible" >

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/TenDayDu"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/NgaySinh"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_gender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/GioiTinh"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_idpeople"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/SoCMT"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_idpeoplecreateday"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/NgayCap"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_idpeoplecreateplace"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/NoiCap"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/DienThoaiDKSMS"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_homephone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/DienThoaiLienLac"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_VSDregistryplace"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/DiaChiLienHe"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_MSBScontactplace"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:contentHint="@string/DiaChiLienHe"
                    app:editable="true"
                    app:labelText="@string/DiaChiLienHe"
                    app:orientation="vertical"
                    android:visibility="gone"/>

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:contentHint="@string/Email"
                    app:labelText="@string/Email"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_careby"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/ChamSocBoi"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_brokerphone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/SDTMoiGioiChamSoc"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_customerclass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/HangKhachHang"
                    app:orientation="vertical" />

                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_authorize"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/green_text"
                    app:labelText="@string/NguoiNhanUyQuyen"
                    app:orientation="vertical" />
                <com.fscuat.mobiletrading.design.LabelContentLayout
                    android:id="@+id/lc_thietlaptk_tradingcode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m_labelcontentverlayout_height"
                    app:contentColor="@color/white_text"
                    app1:inputType="textPassword"
                    app:contentHint="@string/MatKhauGiaoDich"
                    app:editable="true"
                    app:labelText="@string/MatKhauGiaoDich"
                    app:orientation="vertical"
                    android:visibility="gone"/>
                <View
                    android:id="@+id/view_accountinfor_tradingcode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/t_cashtransfer_frame_marginLeft"
                    android:layout_weight="1"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_accountconfig_Accept"
                        style="@style/Button_Background1"
                        android:layout_width="0dp"
                        android:layout_marginRight="9dp"
                        android:layout_weight="5.0"
                        android:visibility="gone"
                        android:text="@string/XacNhan" />

                    <Button
                        android:id="@+id/btn_accountconfig_Cancel"
                        style="@style/Button_Background1"
                        android:layout_width="0dp"
                        android:layout_weight="5.0"
                        android:visibility="gone"
                        android:text="@string/Cancel" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_changepassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_changepin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_authorizationinfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>