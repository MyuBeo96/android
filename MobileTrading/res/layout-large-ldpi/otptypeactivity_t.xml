<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:noHistory="true"
    android:gravity="center_vertical"
    android:background="@drawable/ic_login_background_mobile"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <TextView
        android:id="@+id/actionbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:textSize="19sp"
        android:layout_marginBottom="15dp"
        android:text="@string/otptypenote"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_OTPType_SMS"
            style="@style/Button_Background1"
            android:background="@drawable/backgroundbutton"
            android:layout_weight="5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:text="@string/otptypesms" />
        <Button
            android:id="@+id/btn_OTPType_APP"
            style="@style/Button_Background1"
            android:background="@drawable/backgroundbutton"
            android:layout_weight="5"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="10dp"
            android:text="@string/otptypeapp" />
    </LinearLayout>

</LinearLayout>