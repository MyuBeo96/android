<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.msbuat.mobiletrading"
    android:id="@+id/changepassword"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight" >

    <com.msbuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_OldPass"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:contentColor="@color/white_text"
        app:contentHint="@string/thietlaptk_OldPass"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_OldPass"
        app:orientation="vertical" />

    <com.msbuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_NewPass"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:contentColor="@color/white_text"
        app:contentHint="@string/thietlaptk_NewPass"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_NewPass"
        app:orientation="vertical" />

    <com.msbuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_ConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:contentColor="@color/white_text"
        app:contentHint="@string/thietlaptk_ConfirmPass"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_ConfirmPass"
        app:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_HuyPass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@color/transparent"
            android:text="@string/Cancel"
            android:textColor="@color/red_brown_text" />


        <Button
            android:id="@+id/btn_thietlaptk_ChangePass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@color/transparent"
            android:text="@string/XacNhan"
            android:textColor="@color/green_text" />
    </LinearLayout>

</LinearLayout>