<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_Ngay"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_Gio"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center" />
        <TextView
            android:id="@+id/text_PastPlaceOrder_item_MaCK"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_FloorTrade"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.7"
            android:gravity="center"
            android:singleLine="true" />
        <TextView
            android:id="@+id/text_PastPlaceOrder_item_Side"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.4"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_LoaiLenh"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_SoLuong"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_Gia"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_KenhGiaoDich"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_TrangThaiLenh"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.8"
            android:gravity="center|right" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_separation_color" />

    <LinearLayout
        android:id="@+id/layout_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_Status"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/text_PastPlaceOrder_item_via"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="right|center_vertical" />
    </LinearLayout>


</LinearLayout>