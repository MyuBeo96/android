<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.msbuat.mobiletrading"
    android:id="@+id/changetradingpassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight" >

    <com.msbuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_OldPin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:contentColor="@color/white_text"
        app:contentHint="@string/thietlaptk_OldPin"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_OldPin"
        app:orientation="vertical" />

    <com.msbuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_NewPin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:contentColor="@color/white_text"
        app:contentHint="@string/thietlaptk_NewPin"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_NewPin"
        app:orientation="vertical" />

    <com.msbuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_ConfirmPin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:contentColor="@color/white_text"
        app:contentHint="@string/thietlaptk_ConfirmPin"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_ConfirmPin"
        app:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_HuyPin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@color/transparent"
            android:text="@string/Cancel"
            android:textColor="@color/red_brown_text" />

        <View
            android:id="@+id/viewsp"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/header_separation_color" />

        <Button
            android:id="@+id/btn_thietlaptk_ChangePin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@color/transparent"
            android:text="@string/XacNhan"
            android:textColor="@color/green_text" />
    </LinearLayout>

</LinearLayout>