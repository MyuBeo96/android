                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignLeft="@+id/img_placeorder_account"
                            android:layout_alignRight="@+id/autoEdt_DatLenh_Afacctno"
                            android:layout_below="@+id/autoEdt_DatLenh_Afacctno"
                            android:background="@color/lc_separation_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/img_placeorder_symbol"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_datlenh_mack" />

                        <com.fss.designcontrol.SymbolEdittext
