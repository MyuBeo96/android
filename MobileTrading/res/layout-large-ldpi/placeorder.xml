                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/lbl_DatLenh_SplitQtty" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignLeft="@+id/lbl_DatLenh_SplitQtty"
                            android:layout_alignRight="@+id/edttg_DatLenh_SplitQtty"
                            android:layout_below="@+id/edttg_DatLenh_SplitQtty"
                            android:background="@color/lc_separation_color" />
                    </RelativeLayout>
