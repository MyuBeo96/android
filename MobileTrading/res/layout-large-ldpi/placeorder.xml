                        <EditText
                            android:id="@+id/edt_order_fromdate"
                            style="@style/EditText_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@+id/edt_order_todate" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignLeft="@+id/label_DatLenh_date"
                            android:layout_alignRight="@+id/img_DatLenh_date"
                            android:layout_below="@+id/edt_order_fromdate"
                            android:background="@color/lc_separation_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/selector_placeordertype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <com.fscuat.mobiletrading.design.SelectorImageView
                            android:id="@+id/img_nororderlist_item_iscancel"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            app:active="false"
                            app:active_drawable="@drawable/ic_active"
                            app:inactive_drawable="@drawable/ic_inactive" />

                        <TextView
