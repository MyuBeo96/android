                            android:layout_height="45dp"
                            android:layout_alignBottom="@+id/cus_edt_DatLenh_LoaiLenh"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:text="@string/LoaiLenh" />

                        <com.fscuat.mobiletrading.design.Edittext_LoaiLenh
                            android:id="@+id/cus_edt_DatLenh_LoaiLenh"
