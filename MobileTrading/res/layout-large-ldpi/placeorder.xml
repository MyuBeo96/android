                            android:textColorHint="@color/edittext_hint_color"
                            android:textCursorDrawable="@drawable/shape_textcursoredittext" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignLeft="@+id/img_placeorder_symbol"
                            android:layout_alignRight="@+id/autoEdt_DatLenh_Symbol"
                            android:layout_below="@+id/autoEdt_DatLenh_Symbol"
                            android:background="@color/lc_separation_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/lbl_DatLenh_SoLuong"
                            style="@style/Content_Style"
                            android:layout_height="45dp"
                            android:layout_alignBottom="@+id/cus_edt_DatLenh_SoLuong"
                            android:gravity="center_vertical"
                            android:text="@string/SoLuong_2" />

                        <com.fscuat.mobiletrading.design.Edittext_SoLuong
                            android:id="@+id/cus_edt_DatLenh_SoLuong"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/lbl_DatLenh_SoLuong" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignLeft="@+id/lbl_DatLenh_SoLuong"
                            android:layout_alignRight="@+id/cus_edt_DatLenh_SoLuong"
                            android:layout_below="@+id/cus_edt_DatLenh_SoLuong"
                            android:background="@color/lc_separation_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_order_pricetype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/lbl_DatLenh_LoaiLenh"
