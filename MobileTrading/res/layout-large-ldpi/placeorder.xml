                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/placeorder_sucmua_tylevay_height"
                                android:paddingLeft="5dp"
                                android:text="@string/datlenh_label_SucMua"
                                android:textColor="#ff777777"
                                android:textSize="@dimen/placeorder_orderinfo_textsize" />

                            <TextView
                                android:id="@+id/text_datlenh_SucMuaBuy"
