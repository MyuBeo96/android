                    <com.fscuat.mobiletrading.design.CustomPassLayout
                        android:id="@+id/edt_amendorder_TradingCode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m_labelcontentverlayout_height"
                        app:contentColor="@color/white_text"
                        app:contentHint="@string/MatKhauGiaoDich"
                        android:layout_below="@+id/lay_order_splitqtty"
                        app:editable="true"
                        app:inputType="textPassword"
                        app:labelText="@string/MatKhauGiaoDich"
                        android:visibility="gone"
                        app:labelRememberText="@string/remmber_tradingpass"
                        app:orientation="horizontal" />

                    <RelativeLayout
                        android:id="@+id/lay_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/label_DatLenh_date"
                            style="@style/Label_Style"
                            android:layout_height="45dp"
                            android:layout_alignBottom="@+id/edt_order_fromdate"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:text="@string/NgayHieuLuc" />

                        <ImageButton
                            android:id="@+id/img_DatLenh_date"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow" />

                        <EditText
                            android:id="@+id/edt_order_todate"
                            style="@style/EditText_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/img_DatLenh_date" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/edt_order_todate"
