                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/lbl_DatLenh_LoaiLenh" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignLeft="@+id/lbl_DatLenh_LoaiLenh"
                            android:layout_alignRight="@+id/cus_edt_DatLenh_LoaiLenh"
                            android:layout_below="@+id/cus_edt_DatLenh_LoaiLenh"
                            android:background="@color/lc_separation_color" />
                    </RelativeLayout>

                    <RelativeLayout
