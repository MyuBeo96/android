<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.msbuat.mobiletrading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.msbuat.mobiletrading.design.LabelContentLayout
        android:id="@+id/text_inputdatehori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_inputdatehori"
        app:contentColor="@color/white_text"
        app:contentgravity="center"
        app:orientation="horizontal"
        app:separationColor="@color/transparent" />

    <ImageButton
        android:id="@+id/btn_inputdatehori"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="0dp"
        android:rotation="90"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow" />

    <View
        android:id="@+id/line_inputdatehori"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lc_separation_color" />

</RelativeLayout>