<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chooseafacctno"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/chooseafacctno_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_dialogfragment" >

        <TextView
            style="@style/Content_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ChangeAccount"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_chooseafacctno_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logout"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_chooseafacctno_logout2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#CC0000"
            android:text="@string/Logout2"
            android:textColor="@color/white_text"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/m_paddingLeft" >

        <TextView
            android:id="@+id/lbl_chonTK_fullname"
            style="@style/Label_Style"
            android:layout_width="150dp"
            android:text="@string/XinChao" />

        <TextView
            android:id="@+id/text_chonTK_fullname"
            style="@style/Content_Style"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/lbl_chonTK_fullname"
            android:textColor="@color/green_text" />

        <TextView
            android:id="@+id/lbl_chonTK_afacctno"
            style="@style/Label_Style"
            android:layout_width="150dp"
            android:layout_below="@+id/text_chonTK_fullname"
            android:text="@string/TKmacdinh" />

        <TextView
            android:id="@+id/text_chonTK_afacctno"
            style="@style/Content_Style"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_chonTK_fullname"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/lbl_chonTK_afacctno"
            android:textColor="@color/green_text" />

        <TextView
            android:id="@+id/lbl_chonTK_SoLuuKy"
            style="@style/Label_Style"
            android:layout_width="150dp"
            android:layout_below="@+id/text_chonTK_afacctno"
            android:text="@string/SoLuuKy" />

        <EditText
            android:id="@+id/edt_chonTK_SoLuuKy"
            style="@style/EditText_Style"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_chonTK_afacctno"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/lbl_chonTK_SoLuuKy"
            android:inputType="textCapCharacters"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/shape_textcursoredittext" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_separation_color" />

    <ListView
        android:id="@+id/listview_chontieukhoan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/listview_separation_color"
        android:paddingLeft="@dimen/m_paddingLeft"
        android:scrollbars="none" />

</LinearLayout>